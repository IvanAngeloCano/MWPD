@import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");
.text-md {
  font-size: 16px;
}

.text-lg {
  font-size: 24px;
}

.text-hg {
  font-size: 32px;
}

.font-medium {
  font-weight: 500;
}

.font-semibold {
  font-weight: 600;
}

.font-bold {
  font-weight: 700;
}

.italic {
  font-style: italic;
}

.normal {
  font-style: normal;
}

.text-primary {
  color: #246EE9;
}

.text-black {
  color: black;
}

.text-gray {
  color: #737373;
}

.sidebar {
  max-width: 240px;
  min-width: 240px;
  height: 100vh;
  background-color: #F3F4F6;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4px 1rem;
}
.sidebar .logo {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  justify-content: center;
  margin-bottom: 2rem;
  height: auto;
  gap: 10px;
}
.sidebar .logo img {
  width: 45px;
  height: auto;
}
.sidebar .logo span {
  font-size: 0.9rem;
  color: #246EE9;
}
.sidebar .logo span strong {
  font-weight: 700;
}
.sidebar .nav-links {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}
.sidebar .nav-links .nav-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 1rem;
  border-radius: 0.5rem;
  color: #000;
  text-decoration: none;
  transition: background 0.2s ease;
}
.sidebar .nav-links .nav-item i {
  font-size: 1rem;
}
.sidebar .nav-links .nav-item.active {
  background-color: #cce0ff;
  color: #004aad;
  font-weight: 600;
}
.sidebar .nav-links .nav-item:hover {
  background-color: #e3edf9;
}
.sidebar .nav-links .nav-item span {
  font-weight: 600;
}
.sidebar .logout {
  border-top: 1px solid #737373;
  padding-top: 8px;
}
.sidebar .logout .nav-item {
  color: #d32f2f;
}
.sidebar .logout .nav-item .logout-icon {
  color: #d32f2f;
}
.sidebar .logout .nav-item:hover {
  background-color: rgba(211, 47, 47, 0.1529411765);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem 1.5rem;
  background-color: #FFFFFF;
  border-bottom: 2px solid #F3F4F6;
}
.header .header-left h1 {
  font-size: 1.5rem;
  font-weight: 700;
}
.header .header-right {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}
.header .header-right .quick-add {
  padding: 0.4rem 0.8rem;
  border: 1px solid #2563eb;
  color: #2563eb;
  background: transparent;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s ease;
}
.header .header-right .quick-add:hover {
  color: white;
  background-color: #2563eb;
  border: 1px solid white;
}
.header .header-right .notif-icon {
  position: relative;
  font-size: 1.2rem;
}
.header .header-right .notif-icon .notif-dot {
  position: absolute;
  top: -2px;
  right: -2px;
  width: 8px;
  height: 8px;
  background: red;
  border-radius: 50%;
}
.header .header-right .user-profile {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}
.header .header-right .user-profile .profile-icon {
  font-size: 1.4rem;
  color: #555;
}
.header .header-right .user-profile .profile-info {
  display: flex;
  flex-direction: column;
  line-height: 1.2;
}
.header .header-right .user-profile .profile-info span:first-child {
  font-weight: 600;
}
.header .header-right .user-profile .profile-info span:last-child {
  font-size: 0.8rem;
  color: #888;
}
.header .header-right .user-profile .fa-caret-down {
  font-size: 0.8rem;
  color: #888;
}

.quick-add-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.199);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.quick-add-modal.hidden {
  display: none;
}
.quick-add-modal .modal-content {
  background: #FFFFFF;
  padding: 2rem;
  border-radius: 12px;
  width: 400px;
  text-align: center;
}
.quick-add-modal .modal-content h2 {
  margin-bottom: 1rem;
}
.quick-add-modal .modal-content .quick-add-cards {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1rem;
}
.quick-add-modal .modal-content .quick-add-cards .quick-card {
  background: #F3F4F6;
  padding: 1rem;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  justify-content: center;
  color: #737373;
  transition: 0.2s;
}
.quick-add-modal .modal-content .quick-add-cards .quick-card i {
  font-size: 24px;
  margin-bottom: 0.5rem;
}
.quick-add-modal .modal-content .quick-add-cards .quick-card:hover {
  background-color: #246EE9;
  color: white;
}
.quick-add-modal .modal-content .modal-close {
  background: #246EE9;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  cursor: pointer;
}

.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(7, 1fr);
  gap: 1rem;
  height: 100%;
}

.bento-box {
  background-color: #F3F4F6;
  border-radius: 0.5rem;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  padding: 1rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.box-total-records {
  grid-column: span 2;
  grid-row: span 2;
}

.box-pending-approvals {
  grid-column: span 2;
  grid-row: 3/span 3;
  overflow: auto;
}
.box-pending-approvals table {
  width: 100%;
  border-collapse: collapse;
}
.box-pending-approvals table th,
.box-pending-approvals table td {
  text-align: left;
  padding: 0.5rem;
  font-size: 0.875rem;
}
.box-pending-approvals table thead {
  background-color: white;
}

.box-calendar {
  grid-column: 3;
  grid-row: 1/span 5;
}
.box-calendar .calendar-placeholder {
  background-color: #f0f0f0;
  flex: 1;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #aaa;
}

.box-tbd {
  grid-column: 1/span 2;
  grid-row: 6/span 2;
}

.box-activity-log {
  grid-column: 3;
  grid-row: 6/span 2;
}
.box-activity-log ul {
  list-style: none;
  padding: 0;
}
.box-activity-log ul li {
  font-size: 0.875rem;
  margin-bottom: 0.5rem;
}

.box-total-records {
  display: flex;
  flex-direction: column;
  background-color: #246EE9;
}
.box-total-records h2 {
  margin-bottom: 0.2rem;
  color: white;
}
.box-total-records .record-cards {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}
.box-total-records .record-card {
  flex: 1;
  max-width: 150px;
  background-color: white;
  border-radius: 0.5rem;
  padding: 0.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  transition: 0.2s ease-in-out;
}
.box-total-records .record-card:hover {
  transform: translateY(-2px);
}
.box-total-records .record-card .card-text {
  display: flex;
  flex-direction: column;
}
.box-total-records .record-card .card-text .record-count {
  font-size: 1.5rem;
  font-weight: bold;
  color: #246EE9;
}
.box-total-records .record-card .card-text .record-label {
  font-size: 0.875rem;
  color: #737373;
}
.box-total-records .record-card .card-icon {
  font-size: 1.75rem;
  color: #737373;
}

.box-calendar {
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
  justify-content: start;
}
.box-calendar .calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box-calendar .calendar-header h2 {
  font-size: 1.2rem;
  font-weight: 600;
}
.box-calendar .calendar-header button {
  background-color: transparent;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
}
.box-calendar .calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  font-weight: 600;
  margin-top: 1rem;
  margin-bottom: 0.5rem;
  color: #333;
}
.box-calendar .calendar-grid {
  position: relative;
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 0.5rem;
  text-align: center;
}
.box-calendar .calendar-grid .day {
  aspect-ratio: 1/1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 500;
  border-radius: 0.5rem;
  background-color: #f5f5f5;
  position: relative;
}
.box-calendar .calendar-grid .event {
  background-color: #2b7de9;
  color: white;
  border-radius: 50%;
  font-weight: bold;
  width: 100%;
  height: 100%;
  aspect-ratio: 1/1;
  display: flex;
  justify-content: center;
  align-items: center;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Montserrat", sans-serif;
  font-weight: 500;
  margin: 0;
  padding: 0;
  background-color: #f9f9f9;
  box-sizing: border-box;
  color: black;
}

.layout-wrapper {
  display: flex;
  height: 100vh;
  width: 100vw;
}
.layout-wrapper .content-wrapper {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}
.layout-wrapper .main-content {
  flex: 1;
  overflow-y: auto;
  background-color: #FFFFFF;
  padding: 1rem;
}

.dashboard-header {
  height: 60px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 1.5rem;
  border-bottom: 1px solid #ddd;
  flex-shrink: 0;
}

.main-content {
  flex-grow: 1;
  padding: 1.5rem;
  overflow-y: auto;
  background-color: #f9f9f9;
}

.main-grid {
  display: grid;
  gap: 15px;
  grid-template-columns: repeat(5, 1fr);
  grid-template-rows: 1fr 1fr;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  place-items: center;
  padding: 0px 80px;
}
.main-grid .upper-half-bg,
.main-grid .lower-half-bg {
  position: absolute;
  width: 100%;
  height: 50%;
  left: 0;
  z-index: 0;
}
.main-grid .upper-half-bg {
  top: 0;
  background-color: #246EE9;
}
.main-grid .lower-half-bg {
  bottom: 0;
  background-color: #FFFFFF;
}
.main-grid .login-wrapper {
  grid-column: 1/span 2;
  grid-row: 1/3;
  z-index: 1;
  align-self: center;
  justify-self: center;
  background: #FFFFFF;
  padding: auto;
  border-radius: 0.75rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  width: 85%;
  height: auto;
  max-width: 420px;
}
.main-grid .login-wrapper form {
  display: flex;
  flex-direction: column;
  row-gap: 30px;
  margin: 20px 0;
  align-items: stretch;
  justify-content: space-evenly;
}
.main-grid .login-wrapper .login-box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main-grid .login-wrapper .login-box .dmw-logo {
  position: absolute;
  top: -75px;
  height: 120px;
  border: 10px solid #246EE9;
  background-color: #246EE9;
  border-radius: 100%;
}
.main-grid .login-wrapper .login-box h2 {
  margin-top: 70px;
}
.main-grid .info-upper-half,
.main-grid .info-lower-half {
  grid-column: 3/span 3;
  z-index: 1;
  padding: 0;
  color: #737373;
  margin: 0px;
  width: 100%;
}
.main-grid .info-upper-half {
  grid-row: 1/2;
  align-self: end;
  color: #F3F4F6;
}
.main-grid .info-upper-half p {
  margin: 8px 0;
}
.main-grid .info-lower-half {
  grid-row: 2/3;
  align-self: start;
}
.main-grid .info-lower-half p {
  margin: 8px 0;
}

.input-group {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 0.5rem;
  padding: 0.75rem 1rem;
  background-color: white;
  height: 45px;
}
.input-group i {
  color: #246EE9;
  font-size: 1.25rem;
  margin-right: 0.75rem;
}
.input-group input {
  border: none;
  outline: none;
  font-size: 1rem;
  flex: 1;
  font-family: "Montserrat", sans-serif;
}
.input-group input::placeholder {
  font-weight: 600;
}
.input-group:focus-within {
  border-color: #246EE9;
  box-shadow: 0 0 0 2px rgba(36, 110, 233, 0.2);
}

.login-button {
  height: 45px;
  padding: auto;
  width: 100%;
  font-family: "Montserrat", sans-serif;
  font-weight: 500;
  border-radius: 6px;
  background-color: #246EE9;
  color: white;
  border: none;
}
.login-button:hover {
  cursor: pointer;
}

.bagong-logo {
  width: 100px;
  position: fixed; /* Positions the element relative to the viewport */
  bottom: 20px; /* Places the element at the bottom edge */
  right: 20px; /* Places the element at the right edge */
  z-index: 1000; /* Ensures the element is on top of other content */
}/*# sourceMappingURL=style.css.map */